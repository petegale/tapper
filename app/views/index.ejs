<% include partials/head %>

  <h1>Tapper</h1>
  <div class=files>
    <h2>Saved recordings</h2>
     <% if (hasfiles) {%>
  <% for (var i = 0; i < file_titles.length; i++) { %>
  <div class=file><a href="/view?id=<%= i %>"><%= file_titles[i] %></a></div>
 <% } %> 
 <% } else {%> 
   
   <div class=file>No recorded files</div>
   
   <% } %> 
</div>
<a href="#" id=toggle>Create new recording</a>
<div class=create id=createpanel>
  <div class=recording id=recording>Recording</div>
  <h2>New session</h2>
<label for="name">Name</label>
  <input type="text" name="name" id="name"><br>
  <label for="desc">Description</label>
  <input type="text" name="desc" id="desc"><br>
  <div class="vu-calibration">
    <div class="left">0.5 sec</div>
    <div class="center">1 sec</div>
    <div class="right">1.5 sec</div>
  </div>
  <div class="vu-shell">
    <div class="vu" id="vu">  </div>
  </div>
    <button id=start>Start recording</button>
    <button id=stop>Stop recording</button>
      <%if (test) {%>
       <button id=test>test</button>

         <% } %>


<% include partials/foot %>